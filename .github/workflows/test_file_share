name: ddl_deploy

# Controls when the workflow will run
on:
  workflow_dispatch:
jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
      - name: Deploy
        runs: |
          echo deploy
      - name: Deploy
        if: ${{ inputs.Env == 'UAT' }}
        uses: xudongk/testMybatis/.github/actions/ftp@main
        with:
          type: 'upload'
          DeployType: ${{ inputs.DeployOrFallback }}
          DRIVER: ${{ secrets.UAT_MYSQL_DRIVER }}
          PASSWORD: ${{ secrets.UAT_MYSQL_PASSWORD }}
          URL: ${{ secrets.UAT_MYSQL_URL }}
          USERNAME: ${{ secrets.UAT_MYSQL_USERNAME }}
    build:
      
